@model Category

<div class="card shadow border-0 mt-4" style="border-radius: 15px;">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input hidden asp-for="CategoryId" />
            <a asp-controller="Category" asp-action="Index" class="text-body-emphasis" style="width:150px; text-decoration:none; margin-bottom:15px;"><i class="bi bi-arrow-return-left"></i> Back</a>
            <div class="border p-3" style="border-radius: 5px">
                @*  <div asp-validation-summary="All"></div>  *@
                <div class="mb-3 p-1 py-2 col-12">
                    <label asp-for="Name" class="ms-2"></label>
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 p-1 py-2 col-12">
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary" style="width:150px; border-radius:10px;">Update</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}