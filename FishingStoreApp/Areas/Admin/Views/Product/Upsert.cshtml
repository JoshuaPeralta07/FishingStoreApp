@{
}

@model ProductVM

<div class="card shadow border-0 my-4" style="border-radius: 15px;">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">@(Model.Product.ProductId!=0?"Update":"Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input hidden asp-for="Product.ProductId" />
            <input hidden asp-for="Product.ImageUrl" />
            <a asp-controller="Product" asp-action="Index" class="text-body-emphasis" style="width:150px; text-decoration:none; margin-bottom:15px"><i class="bi bi-arrow-return-left"></i> Back</a>
            <div class="row">
                <div class="col-10">
                    <div class="border p-3" style="border-radius: 5px">
                        @*  <div asp-validation-summary="All"></div>  *@
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Product.ProductName" class="ms-2"></label>
                            <input asp-for="Product.ProductName" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2"></label>
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Product.Price" class="ms-2"></label>
                            <input asp-for="Product.Price" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Product.ProductCode" class="ms-2"></label>
                            <input asp-for="Product.ProductCode" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.ProductCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Product.Stocks" class="ms-2"></label>
                            <input asp-for="Product.Stocks" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Stocks" class="text-danger"></span>
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Product.ImageUrl" class="ms-2"></label>
                            <input type="file" name="file" class="form-control border-0 shadow" />
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Product.CategoryId" class="ms-2"></label>
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled selected>--Selected Category--</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6">
                                @if (Model.Product.ProductId != 0)
                                {
                                    <button type="submit" class="btn btn-primary" style="width:150px; border-radius:10px;">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary" style="width:150px; border-radius:10px;">Create</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                  <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9"/>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}