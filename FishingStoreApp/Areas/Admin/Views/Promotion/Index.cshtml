@{
}

@model List<Promotion>
<div class="card shadow border-0 my-4" style="border-radius: 15px">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light py-2">Promo List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Promotion" asp-action="Upsert" class="btn btn-primary" style="border-radius:10px"><i class="bi bi-plus-circle"></i> Add Promo</a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Promotion Name</th>
                    <th>Discount</th>
                    <th>Expiry Date</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/promotion.js"></script>
}