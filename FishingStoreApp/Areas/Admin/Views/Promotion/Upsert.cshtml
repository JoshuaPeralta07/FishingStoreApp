@{
}
@model Promotion
<div class="card shadow border-0 my-4" style="border-radius: 15px;">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">@(Model.Id != 0 ? "Update" : "Create") Promo</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input hidden asp-for="Id" />
            <a asp-controller="Promotion" asp-action="Index" class="text-body-emphasis" style="width:150px; text-decoration:none; margin-bottom:15px"><i class="bi bi-arrow-return-left"></i> Back</a>
            <div class="row">
                <div class="col-10">
                    <div class="border p-3" style="border-radius: 5px">
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="PromoName" class="ms-2"></label>
                            <input asp-for="PromoName" class="form-control border-0 shadow" />
                            <span asp-validation-for="PromoName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="Discount" class="ms-2"></label>
                            <input asp-for="Discount" class="form-control border-0"/>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                            
                        </div>
                        <div class="mb-3 p-1 py-2 col-12">
                            <label asp-for="ExpiryDate" class="ms-2"></label>
                            <input asp-for="ExpiryDate" id="ExpiryDate" class="form-control border-0 shadow" />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3 p-1 py-2 col-3">
                            <label asp-for="IsActive" class="ms-2"></label>
                            <input asp-for="IsActive" type="checkbox" />
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div> 

                        <div class="row mt-3">
                            <div class="col-6">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary" style="width:150px; border-radius:10px;">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary" style="width:150px; border-radius:10px;">Create</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}